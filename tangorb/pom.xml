<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.tango</groupId>
	<artifactId>JavaAPI</artifactId>
	<version>8.2.4</version>
	<packaging>pom</packaging>
	<name>Java Tango API</name>
	<description>Java Tango API</description>

	<developers>
		<developer>
			<id>verdier</id>
			<name>Pascal Verdier</name>
			<email>p.verdier@esrf.fr</email>
			<organization>ESRF</organization>
			<organizationUrl>http://www.ersf.eu</organizationUrl>
			<roles>
				<role>Java Developer</role>
			</roles>
			<timezone>1</timezone>
		</developer>
		<developer>
			<id>abeille</id>
			<name>Gwenaëlle Abeillé</name>
			<email>gwenaelle.abeille@synchrotron-soleil.fr</email>
			<organization>Synchrotron Soleil</organization>
			<organizationUrl>http://www.synchrotron-soleil.fr</organizationUrl>
			<roles>
				<role>integrator</role>
			</roles>
			<timezone>1</timezone>
		</developer>
	</developers>

	<scm>
		<connection>scm:svn:https://svn.code.sf.net/p/tango-ds/code/api/java/client/tangorb/trunk</connection>
		<developerConnection>scm:svn:https://abeilleg@svn.code.sf.net/p/tango-cs/code/api/java/client/tangorb/trunk</developerConnection>
		<url>https://svn.code.sf.net/p/tango-ds/code/api/java/client/tangorb/trunk</url>
	</scm>

	<modules>
		<module>dao</module>
		<module>common</module>
	</modules>

	<properties>
		<maven.repositories.server>calypso</maven.repositories.server>
		<maven.repositories.home>/nexus/content/repositories</maven.repositories.home>

		<maven.web.server>calypso</maven.web.server>
		<maven.web.home>/usr/Local/apache/docs</maven.web.home>
	</properties>

	<distributionManagement>
		<repository>
			<uniqueVersion>false</uniqueVersion>
			<id>maven.repositories.server</id>
			<name>Java Releases</name>
			<url>http://${maven.repositories.server}${maven.repositories.home}/java-releases</url>
		</repository>
		<snapshotRepository>
			<id>maven.repositories.server</id>
			<name>Java 
		Snapshots</name>
			<url>http://${maven.repositories.server}${maven.repositories.home}/java-snapshots</url>
		</snapshotRepository>
		<site>
			<id>maven.web.server</id>
			<name>Java Website</name>
			<url>scpexe://${maven.web.server}${maven.web.home}/java</url>
		</site>
	</distributionManagement>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<configuration>
					<encoding>${project.build.sourceEncoding}</encoding>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<encoding>${project.build.sourceEncoding}</encoding>
					<showDeprecation>true</showDeprecation>
					<showWarnings>true</showWarnings>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>verify</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.tango</groupId>
				<artifactId>TangORB-javacommon</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.tango</groupId>
				<artifactId>TangORB</artifactId>
				<version>${project.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
</project>
